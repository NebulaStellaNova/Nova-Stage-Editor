<window title="Simple Form" width="400" maximizable="false" minimizable="false" collapsable="false">
    <window-title width="100%">
    </window-title>
    <grid width="100%">
        <label text="Prop Name:" style="padding: 2px;" verticalAlign="center"/>
        <textfield  id="editPropWindowNameTextField" placeholder="Prop Name" width="100%" verticalAlign="center"/>  

        <label text="Asset Path:" style="padding: 2px;" verticalAlign="center"/>
        <textfield  id="editPropWindowAssetPathTextField" placeholder="Asset Path" width="100%" verticalAlign="center"/> 

        <label text="Animation Type:" style="padding: 2px;" verticalAlign="center"/>
        <option-stepper width="100%">
            <data>
                <item text="Sparrow" />
                <item text="Multisparrow" />
            </data>
        </option-stepper>

        <label text="Color Tint:" style="padding: 2px;" verticalAlign="center"/>
        <color-picker-popup id="editPropWindowColorPicker" width="100%" value="#FFFFFF"/>

        <label text="Blend Mode:" style="padding: 2px;" verticalAlign="center"/>
        <dropdown id="editPropWindowBlendModeDorpdown" text="None" width="100%" searchable="true">
            <data>
                <item text="None"/>
            </data>
        </dropdown>

        <label text="Position:" style="padding: 2px;" verticalAlign="center"/>
        <hbox width="100%">
            <number-stepper id="editPropWindowPosStepperX" pos="0" step="0.1" width="100%" verticalAlign="center"/>
            <number-stepper id="editPropWindowPosStepperY" pos="0" step="0.1" width="100%" verticalAlign="center"/>
        </hbox>

        <label text="Scroll:" style="padding: 2px;" verticalAlign="center"/>
        <hbox width="100%">
            <number-stepper id="editPropWindowScrollStepperX" min="0" pos="0" step="0.1" width="100%" verticalAlign="center"/>
            <number-stepper id="editPropWindowScrollStepperY" min="0" pos="0" step="0.1" width="100%" verticalAlign="center"/>
        </hbox>

        <label text="Scale:" style="padding: 2px;" verticalAlign="center"/>
        <number-stepper id="editPropWindowScaleStepper" min="0" pos="0" step="0.1" width="100%" verticalAlign="center"/>
        
        <label text="Alpha:" style="padding: 2px;" verticalAlign="center"/>
        <number-stepper id="editPropWindowAlphaStepper" min="0" pos="0" step="0.1" width="100%" verticalAlign="center"/>
        
        <label text="Angle:" style="padding: 2px;" verticalAlign="center"/>
        <number-stepper id="editPropWindowAngleStepper" pos="0" step="0.1" width="100%" verticalAlign="center"/>

        <label text="Z-Index:" style="padding: 2px;" verticalAlign="center"/>
        <number-stepper id="editPropWindowZIndexStepper" min="0" pos="0" step="0.1" width="100%" verticalAlign="center"/>

        <label text="Dance Every:" style="padding: 2px;" verticalAlign="center"/>
        <number-stepper id="editPropWindowDanceStepper" min="0" pos="0" step="0.1" width="100%" verticalAlign="center"/>
        
    </grid>
    <hbox width="100%" style="padding: 10px;">
        <spacer width="50%"/>
        <label text="Flip X:" style="padding: 2px;" verticalAlign="center"/>
        <checkbox id="editPropWindowFlipXCheckbox"/>
        <spacer width="10%"/>
        <label text="Flip Y:" style="padding: 2px;" verticalAlign="center"/>
        <checkbox id="editPropWindowFlipYCheckbox"/>
        <spacer width="10%"/>
        <label text="Pixel:" style="padding: 2px;" verticalAlign="center"/>
        <checkbox id="editPropWindowIsPixelCheckbox"/>
    </hbox>
    <window-footer width="100%">
            <spacer width="100%" />
            <button text="Confirm" />
        </window-footer>
</window>