<window title="Simple Form" width="250" maximizable="false" minimizable="false" collapsable="false">
    <window-title width="100%">
    </window-title>
    <vbox width="100%">
        <dropdown id="stageDropdown" text="Select Stage" width="100%" searchable="true">
        </dropdown>
        
        <dropdown id="playerDropdown" text="Select Player" width="100%" searchable="true">
        </dropdown>

        <dropdown id="opponentDropdown" text="Select Opponent" width="100%" searchable="true">
        </dropdown>

        <dropdown id="spectatorDropdown" text="Select Spectator" width="100%" searchable="true">
        </dropdown>
    </vbox>

    <grid width="100%">
      <label text="Stage Name:" style="padding: 2px;" verticalAlign="center"/>
      <textfield  id="stageNameTextField" placeholder="Stage Name" width="100%" verticalAlign="center"/>

      <label text="Camera Zoom:" style="padding: 2px;" verticalAlign="center"/>
      <number-stepper id="defualtCamZoomStepper" pos="0.7" step="0.1" width="100%" verticalAlign="center"/>
    </grid>
    
    <vbox width="100%">
        <label text="Props:" style="padding: 2px;" verticalAlign="center"/>
        <listview id="propsListView" width="100%" height="180" selectedIndex="0">
            <data>
                <item text="Prop 1"/>
            </data>
        </listview>
    </vbox>

    <hbox width="100%">
        <button id="createPropButton" text="Create Prop" width="100%"/>
        <button id="deletePropButton" text="Delete Prop" width="100%"/>
    </hbox>

    <button id="editPropButton" text="Edit Selected Prop" width="100%"/>

    <vbox width="100%">
        <label text="Characters:" style="padding: 2px;" verticalAlign="center"/>
        <listview id="charactersListView" width="100%" selectedIndex="0">
            <data>
                <item text="Player"/>
                <item text="Opponent"/>
                <item text="Spectator"/>
            </data>
        </listview>
    </vbox>

    <button id="editCharacterButton" text="Edit Selected Character" width="100%"/>
    
</window>