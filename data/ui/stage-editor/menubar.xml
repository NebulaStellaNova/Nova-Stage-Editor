<?xml version="1.0" encoding="utf-8"?>
<menubar id="menubar" width="100%" height="5%">
  <style>
    .menu {
    // The width of the individual menu items
    width: 120px;
    }
  </style>

  <menu text="File" width="300">
    <menu-item id="newStage" text="New" shortcutText="Ctrl + N" />
    <menu-separator />
    <menu-item id="saveStage" text="Save" shortcutText="Ctrl + S"/>
    <menu-item id="saveStageAs" text="Save As" shortcutText="Ctrl + Shift + S" />
    <menu-item id="saveStageForPsych" text="Save For Psych" />
    <menu-item id="saveStageForCNE" text="Save For Codename Engine (Coming Soon)" />
    <menu-separator />
    <menu-item id="exitToMenu" text="Exit To Menu" shortcutText="Ctrl + Q" />
  </menu>
  <menu text="Windows">
    <menu-item id="stageDataWindow" text="Stage Data" />
    <!-- <menuoptionbox id="songDataWindow" text="Song Data" /> -->
  </menu>

  <menu text="View">
    <menu-item id="viewFromPlayer" text="View Stage From Player" />
    <menu-item id="viewFromOpponent" text="View Stage From Opponent" />
    <menu-item id="viewFromSpectator" text="View Stage From Spectator" />
  </menu>

  <menu text="Audio">
    <menu text="Editor Music">
      <menuitem text="Song 1" />
      </menu>
    <vbox width="100%" style="padding: 12px;">
      <menu-separator />
      <spacer height="10%"/>
      <label id="editorMusicVolume" text="Editor Music - 100%" />
      <slider id="menubarItemVolumeInstrumental" width="100%" majorTicks="10" minorTicks="5" pos="100" />
    </vbox>
  </menu>

  <menu text="Help">
    <menu-item id="userGuide" text="User Guide" shortcutText="F1" />
    <menu-item id="checkForUpdates" text="Check for Updates" />
    <menu-item id="redownloadEditor" text="Re-Download Editor" />
  </menu>

  <spacer width="100%" />
  <label text="Nova Stage Editor v2.0" verticalAlign="center" />
</menubar>
